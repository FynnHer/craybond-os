#/!bin/sh

echo "Cleaning project"
make clean 
echo "Building project" 
make 
echo "Running emulator"

#../qemu/build/qemu-system-aarch64-unsigned \
qemu-system-aarch64 \
-machine virt \
-cpu cortex-a72 \
-m 512M \
-kernel kernel.img \
-serial mon:stdio \
-device virtio-gpu-pci \
#-display sdl \
#-device rambfb \
#virtio-gpu-pci,max_outputs=1 \
#,xres=800,yres=600 \
# -nographic \
# -monitor unix:/tmp/qemu-monitor,server,nowait -s -S \